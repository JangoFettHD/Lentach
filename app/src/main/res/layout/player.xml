<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="70dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:id="@+id/audio"></FrameLayout>

    <ImageButton
        android:id="@+id/mPlay"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#00ffffff"
        android:padding="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/cd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:15"
        android:id="@+id/mTime"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:textColor="#000000" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/mPlay"
        android:layout_toEndOf="@+id/mPlay"
        android:layout_marginRight="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Lenin Has Risen (OST LOLOLOLLOOLOLOLO)"
            android:id="@+id/mTitle"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:lines="2"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/mPlay"
            android:layout_toEndOf="@+id/mPlay"
            android:textColor="@color/colorText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Noize MC"
            android:id="@+id/mArtist"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:lines="2"
            android:layout_below="@+id/mTime"
            android:layout_toRightOf="@+id/mPlay"
            android:layout_toEndOf="@+id/mPlay"
            android:textColor="#83432559" />
    </LinearLayout>

</RelativeLayout>